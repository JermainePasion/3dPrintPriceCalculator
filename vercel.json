{
  "version": 2,
  "functions": {
    "api/server.js": {
      "runtime": "@vercel/node"
    }
  },
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build" },
    { "src": "backend/api/server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/api/server.js" },
    { "src": "/(.*)", "dest": "frontend/dist/$1" }
  ]
}
